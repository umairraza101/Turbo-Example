<main class="container">
  <div class="header">
    <h1>Quotes</h1>
    <%= link_to "New quote",
                new_quote_path,
                data: { turbo_frame: "new_quote" },
                class: "btn btn--primary" %>
  </div>
  <%= turbo_frame_tag Quote.new %>
  <%= turbo_frame_tag 'quotes' do %>
    <%= render @quotes %>
  <% end %>
</main>